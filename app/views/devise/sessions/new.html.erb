<div class="m-4">
  <a class="navbar-brand" href="#">
    <%# <span><strong>COJARI</strong></span> %>
    <%= link_to root_path, class: "navbar-brand mt-2 mt-lg-0 fw-bold features-p" do %>
    <%= image_tag "logopurple.png" %>
    <% end %>
  </a>
</div>

<div class="" style="position: absolute; bottom: 0; right: 32px;">
  <%= image_tag "Login-svg1.svg" %>
</div>

<div class="" style="position: absolute; bottom: 0; left: 32px;">
  <%= image_tag "login-svg2.svg" %>
</div>
<%# class="p-absolute z-index-back" %>

<div class="container py-5">
  <div></div>
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white-trans-low blur p-4 b-radius shadow">
        <h5 class="center-txt features-h fw-bold mb-3">Connectez-vous</h5>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, :label => 'Adresse e-mail',
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password, :label => 'Mot de Passe',
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <div class="d-flex justify-content-between">
              <%= f.input :remember_me, :label => 'Se rappeler de moi', as: :boolean if devise_mapping.rememberable? %>
              <%= render "devise/shared/links", pswrd: true, register: false,  class: "" %>
            </div>

          </div>

          <div class="form-actions d-flex ">
            <%= f.button :submit, "Se connecter", class: "btn btn-default btn-primary flex-grow-1 fw-semibold mb-2" %>
          </div>
        <% end %>
        <div class="d-flex justify-content-center">
          <%= render "devise/shared/links", register: true, pswrd: false %>
        </div>
      </div>
    </div>
  </div>
</div>
