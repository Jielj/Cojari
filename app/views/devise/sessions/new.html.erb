<h2>Se Connecter</h2>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password, :label => 'Mot de Passe',
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, :label => 'Se rappeler de moi', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Connexion", class: "btn btn-default btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
