<%= render "layouts/svg" %>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white-trans-low blur rounded p-4 shadow">

        <h5 class="center-txt features-h fw-bold pb-3">S'inscrire</h5>
        <h6 class="text-muted h8"><em>En tant que Syndic. Si vous êtes un habitant, veuillez contacter votre syndic pour créer un compte.</em></h6>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, :label => 'Adresse e-mail',
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password, :label => 'Mot de Passe',
                        required: true,
                        hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, :label => 'Confirmation de Mot de Passe',
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Créer mon compte", class: "btn btn-default btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
