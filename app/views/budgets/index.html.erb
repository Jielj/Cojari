<%= render "layouts/navbar" %>
<div class="card pt-3">
<div class="inline-container p-3">
    <% @budgets.each do |budget| %>
      <div class="slide-container">
        <%# <div class="wrapper"> %>
          <div class="clash-card barbarian btns">
            <div class="clash-card__image clash-card__image--barbarian">
            </div>
            <div class="clash-card__level clash-card__level--barbarian"><%= budget.budget_title %></div>
            <div class="clash-card__unit-name"><%= budget.budget_start_date %></div>
            <div class="clash-card__unit-name"><%= budget.budget_end_date %></div>
            <div class="clash-card__unit-name"><%= budget.budget_amount %></div>
            <div class="clash-card__unit-name"><%= budget.budget_status %></div>
            <div class="clash-card__unit-name"><%= budget.budget_type %></div>
            <div class="clash-card__unit-description">
            </div>
            <%= link_to "More about", budget_path(budget.id), class: "bttn btn-main" %>
          </div>
      </div>
    <% end %>
  </div>
</div>

