<% @expenses.each do |e| %>
  <%= e.expense_name%>

  <%= link_to upvote_expense_path(e), data:{"turbo-method": :post}, confirm: 'Vote ?', class: 'link-vote-up', 'data-message' => 'Are you sure?', :remote => true do %>
    <i class="fa-solid fa-thumbs-up"></i>
		<%= e.expense_votes.nil? ? 0 : e.expense_votes.pluck(:vote_up).count(true) %>
  <% end %>

  <%= link_to downvote_expense_path(e), data:{"turbo-method": :post}, confirm: 'Vote ?', class: 'link-vote-up', 'data-message' => 'Are you sure?', :remote => true do %>
    <i class="fa-solid fa-thumbs-down"></i>
		<%= e.expense_votes.nil? ? 0 : e.expense_votes.pluck(:vote_up).count(false) %>
  <% end %>
<% end %>
