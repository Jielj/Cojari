<%= render "layouts/navbar" %>
<div class="card pt-3">
<div class="inline-container p-3">
    <% @expenses.each do |expense| %>
      <div class="slide-container">
        <%# <div class="wrapper"> %>
          <div class="clash-card barbarian btns">
            <div class="clash-card__image clash-card__image--barbarian">
            </div>
            <div class="clash-card__level clash-card__level--barbarian"><%= expense.expense_name %></div>
            <div class="clash-card__unit-name">Type : <%= expense.expense_type %></div>
            <div class="clash-card__unit-name">Montant :<%= expense.expense_amount.to_i %> MAD</div>
            <%# <%# <div class="clash-card__unit-name"><%= expense.expense_status % !! à voir statut dans le edit> %>
            <div class="clash-card__unit-description">
            </div>
            <%= link_to "Détails", expense_path(expense.id), class: "bttn btn-main" %>
          </div>
      </div>
    <% end %>
  </div>
</div>
