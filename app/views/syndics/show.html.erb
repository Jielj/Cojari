
<div class="container">
    <div class="blur co-shadow syn-profile">
      <div class="p-4 d-flex justify-content-start align-items-center">
        <div class=" w-auto m-4">
          <img src="https://images.unsplash.com/photo-1635812233312-984aa05cdf06?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1960&q=80"
              class="rounded-circle shadow-1-strong tes-img" width="150" height="150" />
        </div>
        <div class="">
          <h1><%= @syndic.syndic_name %></h1>
          <h5><span class="fw-semibold">Email:</span> <%= @syndic.user.email %></h5>
          <h5><span class="fw-semibold">Role:</span>  <%= @syndic.user.role.to_s %></h5>
        </div>
      </div>
      <div class="d-flex">
        <% @coproperties.each do |coproperty| %>
          <% if coproperty.syndic_id == current_user.id%>
            <div class="bg-white m-2 p-3 d-block" style="width: 18rem">
              <div class="card-body">
                <h5 class="card-title"><%= coproperty.coproperty_name %></h5>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>



  <span><%= @syndic.creation_date %></span>
  <%= link_to "Delete", syndic_path(@syndic.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "" %>
  <%= link_to "Update", edit_syndic_path(@syndic.id), class: "" %>
