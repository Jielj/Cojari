<div class="container cop-new">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
       <div class="bg-white-trans-low blur p-4 b-radius shadow">

        <h4 class="mb-4 mt-0">Fiche Copropriété</h4>
        <%= simple_form_for [current_user.syndic, @coproperty] do |f| %>
          <div class="d-flex flex-wrap justify-content-start">
            <%= f.input :coproperty_name, :label => 'Nom', html: { class: "flex-grow" }%>
            <%= f.input :number_properties, :label => 'Nombre de Propriétés' %>
          </div>
          <div class="d-flex flex-wrap justify-content-start">
            <%= f.input :bank_account, :label => 'Numéro de Compte Bancaire', html: { class: "flex-grow" } %>
            <%= f.input :expense_method, :label => 'Méthode de Facturation', collection:['Fixe par Habitant','Variable au Tantième']%>
          </div>
          <%= f.input :address, :label => 'Adresse' %>
          <div class="d-flex flex-wrap justify-content-start">
            <%= f.input :coprop_private_area, :label => 'Surface Privée Totale', :hint => 'Somme des surfaces privées de toutes les propriétés, en m²', class: "w-50" %>
            <%= f.input :coprop_common_area, :label => 'Surface Commune Totale', :hint => 'Somme de la surface commune de la copropriété, en m²', class: "w-50" %>
          </div>
          <%= f.input :photo, :label => 'Photo',:hint => 'Ajoutez une photo de la copropriété', as: :file %>
          <div class="d-flex flex-wrap justify-content-end">
            <%= f.submit 'Soumettre',class: "btn btn-primary w-100 " %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
