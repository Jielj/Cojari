<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h2>Fiche de Requête</h2>

        <%= simple_form_for [current_user.syndic, @coproperty, @request] do |f| %>
        <%= f.input :request_title, :label => 'Objet', :hint => 'Définissez un objet pour la requête',:placeholder => 'Problème de Plomberie'  %>
        <%= f.input :message, :label => 'Message', :hint => 'Décrivez votre requête' %>
        <%= f.input :request_date, :label => 'Date de la requête' %>
        <%= f.input :request_status, input_html:{"data-action":"change->conditional-input#toggle"}, collection:['Soumise','Traitée','En cours de Traitement','Rejetée'], :label => 'Statut', :hint => 'Modifiez le statut de la requête' %>
        <%= f.association :property,:label => 'Propriété Rattachée', as: :select, :label_method => lambda { |property| "#{property.property_number}" } , :hint => 'Sélectionnez la propriété rattachée à cette requête' %>
        <%= f.input :photos, :label => 'Pièces Jointes',:hint => 'Vous pouvez joindre des documents ou photos pour préciser votre requête', as: :file, input_html: { multiple: true } %>
        <%= f.submit 'Soumettre', class: "btn btn-default btn-primary" %>
        <% end %>
      </div>
      </div>
      </div>
      </div>


