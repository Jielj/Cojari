<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h2>Formulaire habitation à compléter</h2>

        <%= simple_form_for @property do |f| %>
        <%= f.input :building %>
        <%= f.input :property_number %>
        <%= f.input :total_property_area %>
        <%= f.input :payment_frequency:['Mensuelle','Trimestrielle', 'Annuelle']%>
        <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
