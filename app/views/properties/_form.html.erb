<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h2>Fiche de Propriété</h2>

        <%= simple_form_for [ @syndic, @coproperty, @property] do |f| %>
        <%= f.input :property_number, :label => 'Numéro de propriété' %>
        <%# conditionner par type de copro multi-immeuble %>
        <%= f.input :building, :label => 'Immeuble' %>
        <%= f.input :total_property_area, :label => 'Surface Totale', :hint => 'Surface Totale de la propriété (incluant parking et box titrés), en m²' %>
        <%# <%= f.input :payment_frequency , collection: ['Mensuelle','Trimestrielle', 'Annuelle'], :label => 'Fréquence de Paiement', :hint => 'Fréquence de Paiement des frais de copropriété' %>
        <%= f.input :photo, :label => 'Photo',:hint => 'Ajoutez une photo de la copropriété', as: :file %>
          <div class="d-flex flex-wrap justify-content-end">
            <%= f.submit 'Créer',class: "btn btn-primary w-100 " %>
          </div>
        <% end %>
      </div>
