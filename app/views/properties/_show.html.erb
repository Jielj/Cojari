<div class="p-3">
        <div class="card property-card mx-5 mt-5 shadow">
            <div class="row no-gutters">
                <div class="col-sm-5 ">
                  <%= image_tag "https://source.unsplash.com/random/?living,room", class: "w-100 product-image img" %>
                </div>
                <div class="col-sm-7 info">
                    <div class="card-body">
                        <div class="h1 card-title title text-left mb-4">Propriété N°: </strong><%= @property.property_number %></div>
                        <div class="h5 card-text"><strong>Name: </strong><%= @property.building %></div>
                        <div class="h5 card-text"><strong>Etage: </strong><%= @property.floor %></div>
                        <div class="h5 card-text"><strong>Superficie: </strong><%= @property.total_property_area %>&nbsp;m²</div>
                        <% if !@property.owner.nil? %>
                          <div class="h7 card-text"><strong>Owner: </strong><%= @property.owner.full_name %> </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div >
          <% if current_user.is_syndic? %>
            <%= render "show_syndic" %>
          <% else %>
            <%= render "show_owner" %>
          <% end %>
        </div>
</div>
