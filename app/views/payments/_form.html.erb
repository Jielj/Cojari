<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h2>Fiche de Paiement</h2>

        <%= simple_form_for @payment do |f| %>
        <%= f.input :payment_title %>
        <%= f.input :payment_status, collection:['Mensuelle','Trimestrielle','Annuelle'] %>
        <%= f.input :payment_date %>
        <%= f.input :payment_amount %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
