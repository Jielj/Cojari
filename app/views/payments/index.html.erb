<%= render "layouts/navbar" %>
<div class="card pt-3">
<div class="inline-container p-3">
    <% @payments.each do |payment| %>
      <div class="slide-container">
        <%# <div class="wrapper"> %>
          <div class="clash-card barbarian btns">
            <div class="clash-card__image clash-card__image--barbarian">
              <img src="<%=payment.photo%>" alt="barbarian" />
            </div>
            <div class="clash-card__level clash-card__level--barbarian"><%= payment.payment_title %></div>
            <div class="clash-card__unit-name"><%= payment.payment_amount %></div>
            <div class="clash-card__unit-name"><%= payment.payment_date %></div>
            <div class="clash-card__unit-name"><%= payment.payment_status %></div>
            <div class="clash-card__unit-description">
            </div>
            <%= link_to "More about", payment_path(payment.id), class: "bttn btn-main" %>
          </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "layouts/footer" %>
