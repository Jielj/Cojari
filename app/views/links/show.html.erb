<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h2>Formulaire proprietaire à compléter</h2>

        <%= simple_form_for [@user, @owner] do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :gender, collection:['homme','femme']%>²
          <%= f.input :phone_number %>
          <%= f.input :ownership_date %>
          <%= f.input :birth_date %>
          <input type="hidden" name="owner[property_id]" value="<%= @property.id %>">
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
